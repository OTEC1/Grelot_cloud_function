{
  "functions": {
    "source": "functions",
    "predeploy": "npm --prefix \"$RESOURCE_DIR\" run build"
  },
  "emulators": {
    "functions": {
      "port": 1011
    },
    "firestore": {
      "port": 1012
    },
    "ui": {
      "enabled": true,
      "port": 1013
    },
    "auth": {
      "port": 1014
    },
    "hosting": {
      "port": 1015
    }
  },
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  }
}
